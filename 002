#include <iostream>
using namespace std;
int main(void){
    int i , A[10] ;
    
    for ( i = 0 ; i < 10 ; i++ ) {
    	A[i] = i ;
    	cout << A[i] << endl;
	}

    system("pause");
    return 0;
}



#include <iostream>
#include <iomanip>
using namespace std;
int fun(int A[3][3]){
	int i , j , t ;
	for (i=0 ; i<3 ; i++){
		for (j=0 ; j<i ; j++){
			t = A[i][j];
			A[i][j] = A[j][i];
			A[j][i] = t;
		}
	}
	return 0;
}
int main(void){
    int i , j , A[3][3] = {{1,2,3},{4,5,6},{7,8,9}} ;
    
    cout << "Converted Front" <<endl;
    for (i=0 ; i<3 ; i++){
		for (j=0 ; j<i ; j++){
			cout << setw(7) << A[i][j] << endl;
		}
	}
	fun(A);
	for (i=0 ; i<3 ; i++){
		for (j=0 ; j<i ; j++){
			cout << setw(7) << A[i][j] << endl;
		}
	}

    system("pause");
    return 0;
}



#include <iostream>
using namespace std;
int main(void){
    int i ;
    char A[12] = {'H','E','L','L','O',' ','W','O','R','L','D'};
    
    for ( i = 0 ; i < 12 ; i++ ) {
    	cout << A[i] << endl;
	}

    system("pause");
    return 0;
}



